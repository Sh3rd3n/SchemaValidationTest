{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#ProductOfferingPriceExtension",
  "title": "ProductOfferingPriceExtension",
  "description": "TMForum Product Offering Price schema with DOME extensions",
  "type": "object",
  "required": ["id", "href", "relatedParty"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier of the product offering price"
    },
    "href": {
      "type": "string",
      "description": "Reference to the product offering price"
    },
    "description": {
      "type": "string",
      "description": "Description of the product offering price"
    },
    "isBundle": {
      "type": "boolean",
      "default": true,
      "description": "Indicates if this is a bundled price"
    },
    "lastUpdate": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time of the last update"
    },
    "lifecycleStatus": {
      "type": "string",
      "default": "Active",
      "description": "Lifecycle status of the product offering price"
    },
    "name": {
      "type": "string",
      "description": "Name of the product offering price"
    },
    "priceType": {
      "type": "string",
      "description": "Type of price (e.g., recurring, one-time, usage)"
    },
    "recurringChargePeriodLength": {
      "type": "number",
      "default": 1,
      "description": "Length of the recurring charge period"
    },
    "recurringChargePeriodType": {
      "type": "string",
      "default": "month",
      "description": "Type of recurring charge period (e.g., day, week, month, year)"
    },
    "price": {
      "$ref": "#/definitions/Price",
      "description": "Price amount and currency"
    },
    "bundledPopRelationship": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ReferenceWithName"
      },
      "description": "Bundled product offering price relationships"
    },
    "prodSpecCharValueUse": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ProdSpecCharValueUse"
      },
      "description": "Product specification characteristic value uses"
    },
    "validFor": {
      "$ref": "#/definitions/ValidFor",
      "description": "Period during which the price is valid"
    },
    "relatedParty": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/RelatedParty"
      },
      "description": "Related parties associated with this product offering price"
    },
    "version": {
      "type": "string",
      "default": "1.0",
      "description": "Version of the product offering price"
    },
    "cloudesireProductVersionId": {
      "type": "number",
      "description": "CloudeSire product version identifier"
    },
    "cloudesireResellerCatalogId": {
      "type": "string",
      "description": "CloudeSire reseller catalog identifier"
    },
    "@schemaLocation": {
      "type": "string",
      "description": "Schema location reference"
    }
  },
  "definitions": {
    "Price": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "unit": {
          "type": "string",
          "default": "EUR",
          "description": "Currency unit"
        },
        "value": {
          "type": "number",
          "description": "Price value"
        }
      }
    },
    "ProductSpecCharacteristicValueUse": {
      "type": "object",
      "properties": {
        "isDefault": {
          "type": "boolean",
          "default": true,
          "description": "Indicates if this is the default value"
        },
        "unitOfMeasure": {
          "type": "string",
          "description": "Unit of measure for the value"
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" }
          ],
          "description": "The characteristic value (can be string, number, or boolean)"
        },
        "valueFrom": {
          "type": "number",
          "description": "Minimum value in a range"
        },
        "valueTo": {
          "type": "number",
          "description": "Maximum value in a range"
        }
      }
    },
    "ProdSpecCharValueUse": {
      "type": "object",
      "required": ["id", "description", "name"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier"
        },
        "description": {
          "type": "string",
          "description": "Description of the characteristic"
        },
        "name": {
          "type": "string",
          "description": "Name of the characteristic"
        },
        "productSpecCharacteristicValue": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductSpecCharacteristicValueUse"
          },
          "description": "Array of characteristic values"
        }
      }
    },
    "ReferenceWithName": {
      "type": "object",
      "required": ["id", "href", "name"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier"
        },
        "href": {
          "type": "string",
          "description": "Reference URL"
        },
        "name": {
          "type": "string",
          "description": "Name"
        },
        "@baseType": {
          "type": "string",
          "description": "Base type reference"
        }
      }
    },
    "RelatedParty": {
      "type": "object",
      "required": ["id", "href"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier of the related party"
        },
        "href": {
          "type": "string",
          "description": "Reference URL to the related party"
        },
        "name": {
          "type": "string",
          "description": "Name of the related party"
        },
        "role": {
          "type": "string",
          "description": "Role of the related party"
        },
        "@baseType": {
          "type": "string",
          "description": "Base type of the related party"
        },
        "@schemaLocation": {
          "type": "string",
          "description": "Schema location reference"
        },
        "@type": {
          "type": "string",
          "description": "Type of the related party"
        },
        "@referredType": {
          "type": "string",
          "description": "Referred type"
        }
      }
    },
    "ValidFor": {
      "type": "object",
      "required": ["startDateTime"],
      "properties": {
        "startDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Start date and time of validity period"
        }
      }
    }
  }
}

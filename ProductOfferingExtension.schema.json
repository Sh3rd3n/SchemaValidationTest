{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#ProductOfferingExtension",
  "title": "ProductOfferingExtension",
  "description": "DOME extensions for TMForum Product Offering",
  "type": "object",
  "properties": {
    "cloudesireProductVersionId": {
      "type": "number",
      "description": "CloudeSire product version identifier"
    },
    "pricingLogicAlgorithm": {
      "type": "string",
      "description": "Algorithm used for pricing logic"
    },
    "relatedParty": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/RelatedParty"
      },
      "description": "Related parties associated with this product offering (DOME required)"
    }
  },
  "definitions": {
    "RelatedParty": {
      "type": "object",
      "required": ["id", "href"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier of the related party"
        },
        "href": {
          "type": "string",
          "description": "Reference URL to the related party"
        },
        "name": {
          "type": "string",
          "description": "Name of the related party"
        },
        "role": {
          "type": "string",
          "description": "Role of the related party"
        },
        "@baseType": {
          "type": "string",
          "description": "Base type of the related party"
        },
        "@schemaLocation": {
          "type": "string",
          "description": "Schema location reference"
        },
        "@type": {
          "type": "string",
          "description": "Type of the related party"
        },
        "@referredType": {
          "type": "string",
          "description": "Referred type"
        }
      }
    }
  }
}
